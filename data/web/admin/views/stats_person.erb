<div class="tab-pane" id="Logs">
  <%if @person %>
 		<h5>Campaigns:</h5>
    <table class="table table-condensed">
      <tbody>
        <% @person.campaigns.each do |campaign| %>
          <tr><td>
          	<span class="label label-info"><%=h campaign %></span>
          </td></tr>
        <% end %>
      </tbody>
    </table>
    <h5>Responded from:</h5>
    <table class="table table-condensed">
      <tbody>
        <% @person.responded.each do |responded| %>
          <tr><td>
          	<span class="label label-success"><%=h responded %></span>&nbsp;
          </td></tr>
        <% end %>
      </tbody>
    </table>
  	<h5>Detailed Hits</h5>
	  <table class="table table-condensed">
	    <thead>
	      <th>IP</th>
	      <th>Port</th>
	      <th>Path</th>
	      <th>Forwarded</th>
	      <th>OS</th>
	      <th>Browser</th>
	      <th>Lang</th>
	      <th>Engine</th>
	      <th>Platform</th>
	      <th>User Agent</th>
	      <th>Data</th>
	      <th>Extra</th>
	      <th>Created</th>
	      <th>Updated</th>            
	    </thead>
	    <tbody>
	      <% @person.hits.sort(:created_at.desc).each do |hit| %>
	        <tr>
	          <td><%=h hit.ip %></td>
	          <td><%=h hit.port %></td>
	          <td><%=h hit.path %></td>
	          <% if !hit.forwarded? %>
	          <td><span class="label label-success"><%=h hit.forwarded? %></span></td>
	          <% else %>
	          <td><span class="label label-danger"><%=h hit.forwarded? %></span></td>
	          <% end %>		
						<td><%=h hit.ua_os %></td>	
						<td><%=h hit.ua_browser %></td>	
						<td><%=h hit.ua_lang %></td>
						<td><%=h hit.ua_engine %></td>	
						<td><%=h hit.ua_platform %></td>
						<td><!--<small><%=h hit.user_agent %><small>--></td>
	          <td><small><%=h hit.data['subject'] %></small></td>
	          <td><span class="label label-info"><%=  %></span></td>
	          <td><small><%=h hit.created_at.strftime("%m/%d/%Y-%T")%></small></td>
	          <td><small><%=h hit.updated_at.strftime("%m/%d/%Y-%T") %></small></td>
	        </tr>
	      <% end %>
	    </tbody>
	  </table>
  <% end %>
</div>
